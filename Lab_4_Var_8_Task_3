#include <iostream>
#include <vector>
using namespace std;

int main() 
{  
    int n;  
    cout << "Введите количество элементов в массиве: ";
    cin >> n;
    if (n <= 0) 
    {
        cout << "Количество элементов должно быть положительным!" << endl;
        return 1;
    }
    vector <int> arr(n);
    cout << "Введите элементы массива: ";
    for (int i = 0; i < n; ++i) 
    {
        cin >> arr[i];
    }
    vector<int> uniqueElements; 
    vector<int> counts;
    for (int element : arr) 
    {
        bool found = false;
        for (size_t i = 0; i < uniqueElements.size(); ++i) //Перебираю уникальные элементы 
        {  
            if (uniqueElements[i] == element)
            {
                counts[i]++; 
                found = true; 
                break;
            }
        }
        if (!found) 
        {
            uniqueElements.push_back(element);
            counts.push_back(1); 
        }
    }
    cout << "\nРезультаты:\n";
    cout << "Количество различных элементов: " << uniqueElements.size() << endl;
    cout << "Элементы и их количество:\n";
    for (size_t i = 0; i < uniqueElements.size(); ++i) 
    {
        cout << "Элемент " << uniqueElements[i] << " встречается " << counts[i] << " раз" << endl;
    }
    return 0;
